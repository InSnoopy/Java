<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>

  <Loggers>
  	<!-- 여기에 로거 추가 -->
	<!-- Root 에다가 설정해 놓으면 모든 log4j에 다 설정된다.-->
    <Root level="fatal">
 		<!-- Appenders에 있는 것을 참조 -->
 		<!-- 기본으로 console로 설정 -->
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>

</Configuration>





